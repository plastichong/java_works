package scannerEx;
import java.util.*;

public class BonusPoint {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//보너스 포인트 == 가격*적립율
		int price = 10000;
		int bonusPoint = 0;
		double bonusRatio = 0.05;
		
		bonusPoint = (int)(price * bonusRatio);
		System.out.println(bonusPoint);
	}

}
